{
  "name": "villus",
  "version": "1.0.0-alpha.6",
  "description": "A small and fast GraphQL client for Vue.js",
  "module": "dist/villus.esm.js",
  "unpkg": "dist/villus.js",
  "main": "dist/villus.js",
  "types": "dist/villus.d.ts",
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "./scripts/deploy.sh",
    "test": "jest",
    "test:cover": "jest --coverage",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "build": "node scripts/build.js && npm run ts:defs && npm run ts:bundle",
    "ts:defs": "tsc --emitDeclarationOnly",
    "ts:bundle": "api-extractor run --local --verbose",
    "prepublishOnly": "npm run build"
  },
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@microsoft/api-extractor": "^7.9.3",
    "@types/fast-json-stable-stringify": "^2.0.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-jest": "^26.2.2",
    "bundlesize": "^0.18.0",
    "chalk": "^4.1.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "filesize": "^6.1.0",
    "flush-promises": "^1.0.2",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^6.0.16",
    "gzip-size": "^5.1.1",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.0",
    "prettier": "^2.0.5",
    "rollup": "^2.23.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7",
    "uglify-js": "^3.10.1",
    "vue": "^3.0.0-beta.15",
    "vue-jest": "^3.0.6",
    "vue-template-compiler": "^2.6.11",
    "vuepress": "^1.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --edit -E HUSKY_GIT_PARAMS"
    }
  },
  "files": [
    "dist/*.js",
    "dist/villus.d.ts"
  ],
  "bundlesize": [
    {
      "path": "./dist/*.min.js",
      "maxSize": "10 kB"
    }
  ],
  "eslintIgnore": [
    "locale",
    "dist",
    "scripts",
    "examples"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "fast-json-stable-stringify": "^2.1.0"
  },
  "peerDependencies": {
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0",
    "vue": "^3.0.0-alpha.6"
  }
}
